{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "publish": {
      "dependsOn": ["build"]
    },
    "format": {
      "outputs": []
    },
    "format:fix": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:cov": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "typecheck": {
      "outputs": []
    }
  }
}
